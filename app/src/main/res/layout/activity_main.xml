<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="horizontal">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/violate" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:text="Hello World!"
        android:layout_marginBottom="50dp"
        android:layout_marginVertical="220dp"
        android:layout_marginHorizontal="60dp"
        android:textColor="@color/hibiscus"
        android:textSize="50sp"
        android:textAlignment="center"
        android:textFontWeight="@integer/material_motion_duration_medium_2"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="285dp"
        android:layout_marginHorizontal="60dp"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textAlignment="center"
        android:text="I Am Nasifa Talukder." />
    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginBottom="50dp"
        android:layout_marginVertical="670dp"
        android:layout_marginHorizontal="300dp"
        android:text="Next"
        android:backgroundTint="@color/violate"
        />
    <Button
        android:id="@+id/button4"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="X"
        android:textColor="@color/black"
        android:background="@color/white"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="315dp"
        android:padding="3px"
        />




</androidx.coordinatorlayout.widget.CoordinatorLayout>